---
import type { Playlist } from "../lib/data.ts";
import PlayLogo from "../icons/Play.astro";

interface MainCardProps {
    playlist: Playlist;
}

const { playlist } = Astro.props as MainCardProps;
const { id, cover, title } = playlist;
---

<a href={`/playlist/${id}`} class="relative flex bg-white/10 hover:bg-white/25 space-x-4 items-center rounded-md  max-w-[21rem]">
    <div class="relative max-w-16 max-h-16">
        <img src={cover} alt={`Cover of ${title}`} class="rounded-bl-md rounded-tl-md"/>
    </div>
    <div class="flex-grow">
        <h4 class="text-white font-bold">{title}</h4>
    </div>
    <div class="flex items-center justify-center">
        <div class="bg-green-500 p-2 rounded-full opacity-0 transition-opacity duration-300 mr-2">
            <PlayLogo class="h-6 w-6 text-white"/>
        </div>
    </div>
</a>

<style>
    a:hover .bg-green-500 {
        opacity: 1;
    }
</style>